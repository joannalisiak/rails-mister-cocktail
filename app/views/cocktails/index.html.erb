<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1591634619956-e64fd0fa3fac?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');">
  <div class="container">
    <div class="row">
      <div class="col-10">
        <h1>Miss Cocktail</h1>
        <p>Classy cocktails for your nightlife</p>
        <%= link_to new_cocktail_path, class: "btn btn-primary" do %>
          <i class="fas fa-cocktail"></i> Add a Cocktail
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="conatiner">
  <div class="row justify-content-center">
    <div class="col-8 cocktails">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="mt-4 mb-4">Cocktails</h2>
        <%= link_to new_cocktail_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
      <div class="d-flex">
        <% @cocktails.each do |c| %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('')">
            <% if c.photo.attached? %>
              <%= cl_image_path c.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
              <%= cl_image_tag 'photo-1536935338788-846bb9981813_f44lec', height: 300, width: 400, crop: :fill %>
              <p>Info</p>
            <% end %>
            <div class="card-description">
              <h2><%= c.name %></h2>
            </div>
            <%= link_to "", cocktail_path(c), class: "card-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
