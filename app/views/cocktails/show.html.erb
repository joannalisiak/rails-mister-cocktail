<div class="container">

  <h1><%= @cocktail.name %></h1>
  <%= link_to cocktails_path do %>
    <i class="fas fa-undo-alt"></i> Back to all cocktails
  <% end %>

  <div class="row">

    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <% @cocktail.doses.each do |d| %>
            <tr>
              <td><%= d.ingredient.name %></td>
              <td><%= d.description %></td>
              <td>
                <%= link_to dose_path(d), method: :delete, data: {confirm: "Are you sure?"} do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-12 col-md-6">
      <%= render 'doses/new', cocktail: @cocktail, dose: @dose %>
    </div>

  </div>

  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
    <%= cl_image_tag 'photo-1536935338788-846bb9981813_f44lec', height: 300, width: 400, crop: :fill %>
  <% end %>
</div>
